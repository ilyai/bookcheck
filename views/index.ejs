<!DOCTYPE html>
<html>
  <head>
    <title>Book Check</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="/javascripts/jquery-1.11.1.min.js"></script>
    <script src="/javascripts/main.js"></script>
  </head>
  <body>
    <div class="container">

      <section class="top-bar">
        <input type="text" class="search text control" placeholder="Lookupâ€¦">
        <form action="/bookmarks" id="submit_url" method="post">
          <input type="url" class="text control" name="url">
          <input type="submit" class="btn" value="Submit"> 
        </form>
      </section>

      <ol class="bookmarks">
        <% bookmarks.forEach(function(bm) {  %>
          <li>
            <a target="_blank" href="<%= bm.url %>" class="link <%= bm.is_updated ? 'updated' : '' %>" data-id="<%= bm.id %>">
              <%= truncate(bm.title, 50) %>
            </a>
            <a href="#" class="destroy" data-id="<%= bm.id %>">&times;</a>
          </li>
        <% }) %>
      </ol>

    </div>
  </body>
</html>
